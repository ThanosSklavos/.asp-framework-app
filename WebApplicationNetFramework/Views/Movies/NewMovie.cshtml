@model WebApplicationNetFramework.Models.Movie
@{
    ViewBag.Title = "NewMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control mb-2" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.TextBoxFor(m => m.Genre, new { @class = "form-control mb-2" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Copies)
        @Html.TextBoxFor(m => m.Copies, new { @class = "form-control mb-2" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

}

